{% extends "base.html.twig" %}

{% block title %}
    Classroom page
{% endblock %}

{% block stylesheets %}
 <style type="text/css">

 </style>
{% endblock %}

{% block body %}
<h3>Liste des enseignants</h3>
{% if teachers %}
  <table class="app-table-list table table-striped table-hover">
      <thead style="background-color: rgb(204, 23, 99) !important;">
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Nom</th>
              <th scope="col">Prénom</th>
              <th scope="col">Age</th>
              <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
      {% for teacher in teachers %}
          <tr>
              <th scope="row">{{ teacher.id}}</th>
              <td>{{ teacher.lastname}}</td>
              <td>{{ teacher.firstname}}</td>
              <td>{{ teacher.dateOfBirth.diff(date("now"|date)).y}} ans</td>
              <td class="d-flex justify-content-end gap-2">
                  <a class="text-danger" title="supprimer" href="#"><i class="fas fa-trash"></i></a>
                  <a class="text-secondary" title="éditer" href="#"> <i class="fas fa-edit"></i></a>
              </td>
          </tr>
      {% endfor %}
      <tbody>
  </table> 

  {% if totalPages > 1 %}
    {% include 'components/paginator/_pagination.html.twig' with {
        page: currentPage,
        pages: totalPages
    } %}
  {% endif %}

{% else %}  
  <div class="alert alert-warning" role="alert">
    Aucun résultat trouvé
  </div>
{% endif %} 

{% endblock %}