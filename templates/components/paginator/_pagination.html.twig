{% set firstPageItem = page > 10 ? page - 9 : 1 %}
{% set lastPageItem = pages <= 10 ? pages : 10 %}
{% set currentRoute = app.request.attributes.get('_route') %}
<nav  aria-label="Navigation des pages">
  <ul class="pagination justify-content-center">
    <li class="page-item">
    {% if page ==1 %} 
        <span class="page-link disabled"><i class="fas fa-circle-left"></i></span>
    {% else %} 
        <a class="page-link" href="{{ path(name = currentRoute , parameters = {page: page - 1})}}"><i class="fas fa-circle-left"></i></a>
    {% endif %}
      
    </li>
    {% for p in range(firstPageItem,lastPageItem) %}
        {% if page == p %}
        <li class="page-item active">
            <span class="page-link">
                {{page}}
                <span class="sr-only">(current)</span>
            </span>
        </li>
        {% else %}
        <li class="page-item"><a class="page-link" href="{{ path(name = currentRoute , parameters = {page: p})}}">{{p}}</a></li>
        {% endif %}
  

    {% endfor %}
    <li class="page-item">
        {% if page == pages %} 
            <span class="page-link disabled"><i class="fas fa-circle-right"></i></span>
        {% else %} 
            <a class="page-link" href="{{ path(name = currentRoute , parameters = {page: page + 1})}}"><i class="fas fa-circle-right"></i></a>
        {% endif %}
    </li>
  </ul>
</nav>