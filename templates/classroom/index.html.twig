{% extends "base.html.twig" %}

{% block title %}
    Classroom page
{% endblock %}

{% block stylesheets %}
 <style type="text/css">

 </style>
{% endblock %}

{% block body %}
<h3>Liste des classes</h3>
<table class="app-table-list table table-striped table-hover">
    <thead style="background-color: rgb(204, 23, 99) !important;">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Année</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    {% for class in classrooms %}
        <tr>
            <th scope="row">{{ class.id}}</th>
            <td>{{ class.name}}</td>
            <td>{{ class.year}}</td>
            <td class="d-flex justify-content-end gap-2">
                <a class="text-danger" title="supprimer" href="#"><i class="fas fa-trash"></i></a>
                <a class="text-secondary" title="éditer" href="#"> <i class="fas fa-edit"></i></a>
            </td>
        </tr>
    {% endfor %}
    <tbody>
</table> 

{% if totalPages > 1 %}
  {% include 'components/paginator/_pagination.html.twig' with {
      page: currentPage,
      pages: totalPages
  } %}
{% endif %}  






{% endblock %}